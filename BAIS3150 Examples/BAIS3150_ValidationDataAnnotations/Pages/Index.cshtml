@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<!--<!DOCTYPE html>-->
<html lang="en">
<head>
    <title>Data Annotation Attributes</title>
    <meta charset="utf-8" />

    <script src="~/libraries/jquery/jquery.js"></script>
    <script src="~/libraries/jquery-validate/jquery.validate.js"></script>
    <script src="~/libraries/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
</head>
<body>
    <header>Header</header>
    <nav>Navigation</nav>
    <main>
        Main
        <div>
            Division
            <form name="ValidationForm" method="post" id="ValidationForm">
                <input asp-for="Field" />
                <span asp-validation-for="Field" class="text-danger"></span>
                <br/><br/><br/>
                <input asp-for="ValidateMe" />
                <span asp-validation-for="ValidateMe" class="text-danger"></span>
                <input type="Submit" name="Submit" id="Submit" value="Submit" />
            </form>
            @section scripts
            {
                @await Html.PartialAsync("_ValidationScriptsPartial")
            }
        </div>
    </main>
    <footer>
        Footer
        @Model.Message
    </footer>
</body>
</html>
